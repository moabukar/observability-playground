{
    "title": "App Overview",
    "uid": "app-overview",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "panels": [
      {
        "type": "timeseries",
        "title": "Requests / Errors",
        "targets": [
          {"expr": "sum(rate(app_requests_total[1m]))", "legendFormat": "req/s"},
          {"expr": "sum(rate(app_errors_total[1m]))",   "legendFormat": "err/s"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "type": "timeseries",
        "title": "Latency p50/p90/p95",
        "targets": [
          {"expr": "histogram_quantile(0.50, sum by (le) (rate(app_request_seconds_bucket[1m])))", "legendFormat": "p50"},
          {"expr": "histogram_quantile(0.90, sum by (le) (rate(app_request_seconds_bucket[1m])))", "legendFormat": "p90"},
          {"expr": "histogram_quantile(0.95, sum by (le) (rate(app_request_seconds_bucket[1m])))", "legendFormat": "p95"}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "type": "logs",
        "title": "App Logs",
        "targets": [{ "expr": "{job=\"app\"}" }],
        "gridPos": {"h": 10, "w": 12, "x": 0, "y": 8}
      },
      {
        "type": "traces",
        "title": "Recent Traces",
        "datasource": "Tempo",
        "gridPos": {"h": 10, "w": 12, "x": 12, "y": 8}
      }
    ]
  }
  